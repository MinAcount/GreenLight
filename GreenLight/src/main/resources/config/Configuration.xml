<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration PUBLIC "-//mybatis.org//DTD Config 3.0//EN" "http://mybatis.org/dtd/mybatis-3-config.dtd" >
<configuration>
	<typeAliases>
		<!-- 인사 -->
		<typeAlias type="com.green.light.vo.EmployeeVo" alias="EmpVo"/>
		<typeAlias type="com.green.light.vo.DepartmentVo" alias="DeptVo"/>
		<typeAlias type="com.green.light.vo.HeadquartersVo" alias="HeadVo"/>
		<typeAlias type="com.green.light.vo.SignVo" alias="SignVo"/>
		<typeAlias type="com.green.light.vo.AttendainceVo" alias="AttendainceVo"/>
		<typeAlias type="com.green.light.vo.VacationVo" alias="VacationVo"/>
